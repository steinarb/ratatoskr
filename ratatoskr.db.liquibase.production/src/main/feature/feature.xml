<features xmlns="http://karaf.apache.org/xmlns/features/v1.4.0" name="ratatoskr.db.liquibase.production">

    <feature name="${karaf-feature-name}">
        <feature>scr</feature>
    </feature>
    <feature name="ratatoskr-db-production" description="ratatoskr production DataSource" version="${project.version}">
        <config name="org.ops4j.datasource-ratatoskr-production">
            osgi.jdbc.driver.name=PostgreSQL JDBC Driver
            dataSourceName=jdbc/ratatoskr
            url=jdbc:postgresql:///ratatoskr
            user=karaf
            password=karaf
            ops4j.preHook=ratatoskrdb
        </config>
        <capability>
            osgi.service;objectClass=javax.sql.DataSource;effective:=active;osgi.jndi.service.name=jdbc/ratatoskr
        </capability>
        <feature>${karaf-feature-name}</feature>
        <feature>pax-jdbc-config</feature>
        <feature>postgresql</feature>
    </feature>
</features>
